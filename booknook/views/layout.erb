<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>The Book Nook</title>
  <link href='https://fonts.googleapis.com/css?family=Alegreya Sans' rel='stylesheet'>
  <link rel='stylesheet' href='/stylesheets/main.css'>
</head>
<body>
  <div class="container">
    <header>
      <h1>The Book Nook</h1>
      <% if logged_in? %>
        <h3>Welcome, <%= current_user.display_name %>!</h3>
        <form class="" action="/session" method="post">
          <input type="hidden" name="_method" value="delete">
          <button type="submit" name="button">Logout</button>
        </form>
      <% end %>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/browse-books">Browse Books</a></li>
          <% if !logged_in? %>
          <li><a href="/login-page">Login/Register</a></li>
          <% end %>
        </ul>
      </nav>
    </header>
    <div class="content">


      <%= yield %>


    </div>
    <footer>
      This is the footer
    </footer>
  </div><!--end of container-->
</body>
</html>
